<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form" 
xmlns:core="sap.ui.core" controllerName="view.Page1">

  <Page title="Employee Registration Form">
     <content>
             <form:SimpleForm>
             
                   <form:title>
                          <core:Title 
                          text="Please Enter Employee Details"/>
                   </form:title>
                   
                   <form:content>
                          <Label text="Employee Name"/>
                          <Input value="Devender" id="idIp"/>
                          <Label text="Department"/>
                          <ComboBox>
                               <items>
                                   <core:Item text="SAP"/>
                                   <core:Item text="Oracle"/>
                               </items>
                          </ComboBox>  
                   </form:content>
             </form:SimpleForm> 
             
               
     </content>
  </Page>
     
</mvc:View>